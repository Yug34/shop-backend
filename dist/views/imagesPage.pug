doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        title Image Uploading
    body
        h1 To Upload Image on mongoDB
        hr
        div
            form(action='/catalog/display' method='POST' enctype='multipart/form-data')
                div
                    label(for='name') Product Name
                    input#name(type='text' placeholder='Name' value='' name='name' required='')
                div
                    label(for='desc') Product Description
                    input#desc(name='description' value='' placeholder='Description' required='')
                div
                    label(for='quantity') Quantity
                    input#quantity(name='quantity' value='' placeholder='10' required='')
                div
                    label(for='price') Price
                    input#price(name='price' value='' placeholder='100' required='')
                div
                    label(for='image') Upload Image
                    input#image(type='file' name='image' value='' required='')
                div
                    button(type='submit') Submit
        hr
        h1 Uploaded Images
        div
            each item in items
                div
                    div
                        img(src=`data:image/${item.image.contentType};base64,${item.image.data.toString('base64')}`)
                        div
                            h5 #{item.name}
                            p #{item.quantity}
            else
                p No items!